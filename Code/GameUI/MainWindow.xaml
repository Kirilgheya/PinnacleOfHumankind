<Window x:Class="GameUI.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    Title="MainWindow" Height="320" Width="320" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <!-- EXAMPLE USAGE BELOW -->
        <Image gif:ImageBehavior.AnimatedSource="Res/menu.gif" />
        <Image gif:ImageBehavior.RepeatBehavior="Forever"/>
        <Image gif:ImageBehavior.AutoStart="True"/>
        <Button Content="Play" HorizontalAlignment="Left" Margin="101,131,0,0" VerticalAlignment="Top" Width="121" Height="32" Foreground="White" Background="Transparent" BorderBrush="White" BorderThickness="1" Click="Button_Click"/>
        <Button Content="Save Data" HorizontalAlignment="Left" Margin="101,168,0,0" VerticalAlignment="Top" Width="121" Height="32" Foreground="White" Background="Transparent" BorderBrush="White" BorderThickness="1" Click="BtnSaveData_Click"/>
        <Label VerticalAlignment="Top" Height="107" Width="166" Content="POH" Foreground="White" FontSize="80" Margin="75,10,79,0" HorizontalAlignment="Center"/>
        <Button Content="Load Data" HorizontalAlignment="Left" Margin="101,205,0,0" VerticalAlignment="Top" Width="121" Height="32" Foreground="White" Background="Transparent" BorderBrush="White" BorderThickness="1" Click="BtnLoadData_Click"/>

    </Grid>
</Window>
